<?xml version="1.0" encoding="utf-8"?>
<extension type="module" version="3.6" client="administrator" method="upgrade">
	<name>MOD_CUSTOMADMIN</name>
	<author>Javi Mata</author>
	<creationDate>August 2018</creationDate>
	<copyright>Copyright (C) 2010 - 2016 JoomShaper. All rights reserved.</copyright>
	<license>GNU General Public License version 2 or later; see LICENSE.txt</license>
	<authorEmail>javimata@gmail.com</authorEmail>
	<authorUrl>www.javimata.com</authorUrl>
	<version>1.0.0</version>
	<description>MOD_CUSTOMADMIN_XML_DESCRIPTION</description>

    <updateservers>
        <server type="extension" name="Custom Admin" priority="1">http://updates.javimata.com/mod_customadmin.xml</server>
    </updateservers>

	<files>
		<filename module="mod_customadmin">mod_customadmin.php</filename>
		<filename>helper.php</filename>
		<filename>index.html</filename>
		<folder>assets</folder>
		<folder>form</folder>
		<folder>language</folder>
		<folder>tmpl</folder>
	</files>

	<config>
		<fields name="params">

			<fieldset name="basic">

				<field name="notaintro" type="note" label="MOD_CUSTOMADMIN_NOTEINTRO_LABEL" description="MOD_CUSTOMADMIN_NOTEINTRO_DESC" />
					
			</fieldset>

			<fieldset name="icons" label="MOD_CUSTOMADMIN_ICONS_TAB" class="jam">

				<field name="notaintro" type="note" label="MOD_CUSTOMADMIN_NOTE_LABEL" class="alert" description="MOD_CUSTOMADMIN_NOTE_DESC" />

				<field name="icons" type="subform"
				    formsource="administrator/modules/mod_customadmin/form/icons.xml" multiple="true"
				    label="MOD_CUSTOMADMIN_ICONS_LABEL" description="MOD_CUSTOMADMIN_ICONS_DESC" layout="joomla.form.field.subform.repeatable-table" />
					
			</fieldset>

			<fieldset name="custom" label="MOD_CUSTOMADMIN_CUSTOM_TAB">

				<field name="color_icon" label="MOD_CUSTOMADMIN_COLORS_LABEL" type="color" default="#565656" description="MOD_CUSTOMADMIN_COLORS_DESC" />

				<field name="add_icon" class="btn-group btn-group-yesno" buttons="true" type="radio" default="1" label="MOD_CUSTOMADMIN_ADDICON_LABEL" description="MOD_CUSTOMADMIN_ADDICON_DESC">
				  <option value="1">JYES</option>
				  <option value="0">JNO</option>
				</field>

				<field name="add_title" class="btn-group btn-group-yesno" buttons="true" type="radio" default="1" label="MOD_CUSTOMADMIN_ADDTITLE_LABEL" description="MOD_CUSTOMADMIN_ADDTITLE_DESC">
				  <option value="1">JYES</option>
				  <option value="0">JNO</option>
				</field>

				<field type="spacer" name="myspacer" label="MOD_CUSTOMADMIN_NOTAFA_LABEL"/>

				<field name="url_fontawesome" type="text" class="span9" default="https://use.fontawesome.com/releases/v5.3.1/css/all.css" label="MOD_CUSTOMADMIN_URLFA_LABEL" description="MOD_CUSTOMADMIN_URLFA_DESC"/>

			</fieldset>

			<fieldset name="advanced">
				<field name="layout" type="modulelayout" label="Layout" />
			</fieldset>

		</fields>
	</config>
</extension>